@model IEnumerable<PenjualanApp.Models.Transaksi>

@{
    ViewData["Title"] = "Daftar Transaksi";
}

<h1>Daftar Transaksi</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kasir ID</th>
            <th>Total</th>
            <th>Tanggal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.KasirId</td>
                <td>@item.Total.ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                <td>@item.Tanggal.ToString("dd/MM/yyyy HH:mm:ss")</td>
            </tr>
        }
    </tbody>
</table>
